---
import MemoraireButton from '../components/Button.astro';
---

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-500 to-violet-600 p-6">
  <main class="w-full max-w-md md:max-w-lg lg:max-w-xl bg-white rounded-3xl shadow-xl overflow-hidden transition-all duration-300 hover:shadow-2xl">
    <!-- Hero Section -->
    <div class="relative h-40 sm:h-48 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-violet-700 opacity-90"></div>
      <div class="absolute inset-0 bg-[url('/api/placeholder/800/300')] bg-cover bg-center mix-blend-overlay"></div>
      <div class="absolute inset-0 flex items-center justify-center">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-white drop-shadow-md">
          Memoraire
        </h1>
      </div>
    </div>
    
    <!-- Content Section -->
    <div class="p-8 sm:p-10 text-center">
      <div id="box-text" class="space-y-6">
        <div>
          <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2">Write your day!</h2>
          <h3 class="text-base sm:text-lg text-gray-600 max-w-md mx-auto">
            Write your whole activity and most memorable memory in your day in just 1 sentence.
          </h3>
        </div>
        
        <div class="relative py-5">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="bg-white px-4 text-sm text-gray-500">inspired by</span>
          </div>
        </div>
        
        <p class="text-gray-700">
          <span class="font-semibold text-transparent bg-gradient-to-r from-blue-500 to-violet-600 bg-clip-text">Raditya Dika</span>
        </p>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-8">
          <a href="/login" class="py-3 px-6 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-lg hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all shadow-md hover:shadow-lg active:scale-98 text-center">
            Login
          </a>
          <a href="/register" class="py-3 px-6 bg-gradient-to-r from-violet-500 to-violet-600 text-white font-medium rounded-lg hover:from-violet-600 hover:to-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 transition-all shadow-md hover:shadow-lg active:scale-98 text-center">
            Register
          </a>
        </div>
      </div>
    </div>
    
    <!-- Feature Highlights -->
    <div class="px-8 pb-8 grid grid-cols-1 sm:grid-cols-3 gap-4 text-center">
      <div class="p-4 rounded-xl bg-blue-50">
        <div class="w-10 h-10 mx-auto mb-3 flex items-center justify-center rounded-full bg-blue-100 text-blue-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
            <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
          </svg>
        </div>
        <h3 class="text-sm font-medium text-gray-800">Quick Entries</h3>
        <p class="text-xs text-gray-500">Just one sentence per day</p>
      </div>
      
      <div class="p-4 rounded-xl bg-indigo-50">
        <div class="w-10 h-10 mx-auto mb-3 flex items-center justify-center rounded-full bg-indigo-100 text-indigo-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
        </div>
        <h3 class="text-sm font-medium text-gray-800">Daily Tracker</h3>
        <p class="text-xs text-gray-500">Build a timeline of memories</p>
      </div>
      
      <div class="p-4 rounded-xl bg-violet-50">
        <div class="w-10 h-10 mx-auto mb-3 flex items-center justify-center rounded-full bg-violet-100 text-violet-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
          </svg>
        </div>
        <h3 class="text-sm font-medium text-gray-800">Reflection</h3>
        <p class="text-xs text-gray-500">Review your journey anytime</p>
      </div>
    </div>
    <div class="text-center mb-2 text-gray-500">by hoga</div>
  </main>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mainElement = document.querySelector('main');
    if (mainElement) {
      mainElement.classList.add('animate-fade-in');
    }
  });
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
</style>